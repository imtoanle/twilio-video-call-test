.row
  .col-sm-2
  .col-sm-8
    .jumbotron
      %h3.display-4 New Claims
      
      = simple_form_for @claim, url: claims_path do |f|
        = f.error_notification

        = f.input :claim_number
        = f.input :claimant_contact

        = f.button :submit, "Save", class: 'btn btn-primary', "data-disable-with" => "Saving..."
        = link_to "Cancel", claims_path, type: "reset", class: "btn btn-outline-secondary"
  .col-sm-2